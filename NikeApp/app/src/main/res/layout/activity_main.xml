<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".view.MainActivity">

    <com.yarolegovich.discretescrollview.DiscreteScrollView
        android:id="@+id/movieCarousel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
      android:layout_centerInParent="true"
        app:dsv_orientation="horizontal" />
    <ImageView
        android:id="@+id/ivStageLights"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/stage_lights"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"/>

    <LinearLayout
        android:id="@+id/coverImageContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/doors"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/coverImage1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitXY"/>
        <ImageView
            android:id="@+id/coverImage2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitXY"/>

    </LinearLayout>



</RelativeLayout>